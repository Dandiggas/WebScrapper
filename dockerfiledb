# Use an appropriate base image for PostgreSQL
FROM postgres:latest

# Set environment variables for PostgreSQL configuration
ENV POSTGRES_USER prisma
ENV POSTGRES_PASSWORD prisma
ENV POSTGRES_DB prisma

# Copy the SQL script or schema file to initialize the database (if needed)
COPY init.sql /docker-entrypoint-initdb.d/

# Expose the default PostgreSQL port (5432)
EXPOSE 5432
